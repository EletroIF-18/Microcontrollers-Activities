// Make image puzze with lcd
void main() {
  DDRB = 0xFF;
  DDRD = 0xFF;
  PORTB = 0x00;

  set_bit(PORTB, 2);
  inic_LCD_4bits();

  cmd_LCD(0x40, 0);
  for(int k=0; k<8; k++) {
    cmd_LCD(display[0][k], 1);
  }
  cmd_LCD(0x00, 1);

  cmd_LCD(0x81, 0);
  cmd_LCD(0x00, 1);
  cmd_LCD(0x01, 1);

   for(;;);

  return 1;
}
